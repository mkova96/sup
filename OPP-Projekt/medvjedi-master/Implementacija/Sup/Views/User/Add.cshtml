@{
    ViewData["Title"] = "Dodaj korisnika";
}

@model UserViewModel

<form asp-action="Create" method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h3>
        <a asp-action="Index" title="Povratak na prethodnu stranicu">
            <i class="arrow-left"></i>
        </a>
        Dodaj novog korisnika
    </h3>
    <div class="form-group">
        <label asp-for="Name">Ime:</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label asp-for="Surname">Prezime:</label>
        <input type="text" class="form-control" asp-for="Surname">
    </div>
    <div class="form-group">
        <label asp-for="Phone">Telefon:</label>
        <input type="text" class="form-control" asp-for="Phone">
    </div>
    <div class="form-group">
        <label asp-for="EMail">E-Mail Adresa:</label>
        <input type="text" class="form-control" asp-for="EMail">
    </div>
    <div class="form-group">
        <label asp-for="Password">Lozinka:</label>
        <input type="password" class="form-control" asp-for="Password">
    </div>
    <div class="form-group">
        <label asp-for="Role">Uloga:</label>
        <input type="text" class="form-control" asp-for="Role">
    </div>
    <div class="form-group">
        <label asp-for="CompanyId">Tvrtka:</label>
        <select asp-for="CompanyId" asp-items="@(new SelectList((IEnumerable<Company>) @ViewData["Companies"],"Id", "Name"))" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-action="Index">
        <button type="button" class="btn btn-secondary">Odustani</button>
    </a>
</form>